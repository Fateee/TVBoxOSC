<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 整个背景色-->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- 底部圆角,参数是固定的 -->
    <item
        android:width="24dp"
        android:height="6dp"
        android:gravity="bottom|center_horizontal"
        android:bottom="5dp">
        <shape>
            <solid android:color="@color/cC50723" />
            <corners android:radius="123dp" />
        </shape>
    </item>
</layer-list>