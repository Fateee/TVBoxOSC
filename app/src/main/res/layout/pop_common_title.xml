<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/common_bg_color"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp_18">
            <TextView
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_common_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介"
                android:maxLength="12" />
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_17"
            android:textColor="#ff737a80"
            android:gravity="center"
            android:id="@+id/tv_download"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="下载列表"
            android:maxLength="12"
            android:layout_toLeftOf="@id/iv_reverse"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_reverse"
            android:padding="@dimen/dp_10"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_50"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"

            android:layout_toLeftOf="@id/iv_back"
            android:layout_centerInParent="true" />
<!--        android:src="@drawable/ic_reverse"-->
        <ImageView
            android:id="@id/iv_back"
            android:padding="@dimen/dp_12"
            android:visibility="visible"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@drawable/v_info_x"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:id="@+id/v_title_bottom_line"
        android:background="@color/common_line_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentBottom="true" />
</LinearLayout>