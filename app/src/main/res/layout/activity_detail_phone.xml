<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/playerContainer"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                tl:layout_constraintDimensionRatio="16:9"
                tl:layout_constraintLeft_toLeftOf="parent"
                tl:layout_constraintRight_toRightOf="parent"
                tl:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:id="@+id/rlPlayContent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@color/common_bg_color"
                        android:paddingHorizontal="@dimen/dp_17"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50">
                        <com.owen.tvrecyclerview.widget.TvRecyclerView
                            android:id="@+id/mGridViewFlag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            tl:tv_horizontalSpacingWithMargins="@dimen/dp_5"
                            tl:tv_selectedItemIsCentered="true"
                            tl:tv_verticalSpacingWithMargins="@dimen/dp_5" />
<!--                        tl:cardBackgroundColor="@color/common_player_btn_color"-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            tl:cardBackgroundColor="@color/main_color"
                            tl:cardCornerRadius="@dimen/dp_6"
                            tl:cardElevation="@dimen/dp_0">
                            <LinearLayout
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/dp_6"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <TextView
                                    android:id="@+id/tvSite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_18" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <include layout="@layout/fragment_play_info"/>
<!--                    <androidx.viewpager.widget.ViewPager-->
<!--                        android:id="@+id/mViewPager"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="0dp"-->
<!--                        app:layout_constraintTop_toBottomOf="@id/tabLayout"-->
<!--                        app:layout_constraintBottom_toBottomOf="parent"/>-->
                </androidx.appcompat.widget.LinearLayoutCompat>
                <include layout="@layout/fragment_play_pop" android:visibility="gone"/>
<!--                <FrameLayout-->
<!--                    android:id="@+id/fl_play_pop"-->
<!--                    android:visibility="gone"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="fill_parent" />-->
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/mEmptyPlaylist"
                android:background="@color/common_bg2_color"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@drawable/icon_empty"
                    />
                <TextView
                    android:textSize="@dimen/text_size_center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="暂无播放数据"
                    android:layout_marginStart="@dimen/dp_10" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>