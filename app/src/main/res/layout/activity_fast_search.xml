<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="?colorPrimary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_search_title" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/recordBox"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/searchRecordBox"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:cardBackgroundColor="@color/common_card_color"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_0">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/common_line_color"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px" />
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_50">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/common_font_color"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="最近搜索记录" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/common_font_color"
                            android:gravity="center"
                            android:id="@+id/record_clear"
                            android:padding="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="清空" />
                    </LinearLayout>
                </RelativeLayout>
                <!--                <cn.lankton.flowlayout.FlowLayout android:id="@+id/fl_record"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:lineSpacing="10.0dip"
                app:maxLine="3"
                />-->
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/hotBox"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:cardBackgroundColor="@color/common_card_color"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_0">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View android:background="@color/common_line_color"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    />
                <RelativeLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_50">
                    <LinearLayout android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/ll_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/common_font_color"
                            android:gravity="center"
                            android:id="@+id/title_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="热门搜索"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <com.owen.tvrecyclerview.widget.TvRecyclerView android:id="@+id/mGridViewHot"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:tv_horizontalSpacingWithMargins="@dimen/dp_5"
                    app:tv_selectedItemIsCentered="true"
                    app:tv_verticalSpacingWithMargins="@dimen/dp_5"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:id="@+id/searchBox"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_40">
            <TextView android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mSearchTitle"
                android:layout_width="@dimen/dp_100"
                android:layout_height="fill_parent"
                android:text="搜索(0/0)"
                android:textAlignment="center"
                />
            <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mGridViewFenCi"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:tv_horizontalSpacingWithMargins="@dimen/dp_5"
                app:tv_selectedItemIsCentered="true"
                app:tv_verticalSpacingWithMargins="@dimen/dp_5"
                />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout android:orientation="vertical"
                android:id="@+id/llWord"
                android:layout_width="@dimen/dp_100"
                android:layout_height="fill_parent">
                <com.owen.tvrecyclerview.widget.TvRecyclerView
                    android:id="@+id/mGridViewSource"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:tv_horizontalSpacingWithMargins="@dimen/dp_5"
                    app:tv_selectedItemIsCentered="true"
                    app:tv_verticalSpacingWithMargins="@dimen/dp_5" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:id="@+id/llLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.owen.tvrecyclerview.widget.TvRecyclerView
                    android:id="@+id/mGridView"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="invisible"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:tv_horizontalSpacingWithMargins="@dimen/dp_5"
                    app:tv_selectedItemIsCentered="true"
                    app:tv_verticalSpacingWithMargins="@dimen/dp_5"
                    />
                <com.owen.tvrecyclerview.widget.TvRecyclerView android:id="@+id/mGridViewFilter"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="invisible"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:tv_horizontalSpacingWithMargins="@dimen/dp_5"
                    app:tv_selectedItemIsCentered="true"
                    app:tv_verticalSpacingWithMargins="@dimen/dp_5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>