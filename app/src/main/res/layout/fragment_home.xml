<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/topTitleBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--        <ImageView-->
<!--            android:id="@+id/searchTv"-->
<!--            android:padding="@dimen/dp_13"-->
<!--            android:layout_width="@dimen/dp_60"-->
<!--            android:layout_height="@dimen/dp_60"-->
<!--            android:src="@drawable/icon_search"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:layout_centerVertical="true" />-->
        <study.strengthen.china.tv.ui.tv.widget.SimpleCornerTextView
            android:id="@+id/searchTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="搜索名称或者关键字"
            android:textColor="#6f6f6f"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_marginVertical="6dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@id/historyTv"
            android:drawableLeft="@drawable/ic___search"
            android:paddingLeft="@dimen/dp_21"
            android:drawablePadding="@dimen/dp_13"
            app:drawableWidth_left="30dp"
            app:drawableHeight_left="30dp"
            app:bgColor="@color/cf0f0f0"
            app:radius="@dimen/dp_30"/>
        <ImageView
            android:id="@+id/historyTv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="@dimen/dp_13"
            android:src="@drawable/ic___history"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:tabMinWidth="108dp"
        app:layout_constraintTop_toBottomOf="@id/topTitleBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextAppearance="@style/TabLayoutTextSize1"
        app:tabIndicator="@drawable/tab_selected"
        app:tabIndicatorColor="@color/main_color"
        app:tabIndicatorFullWidth="false"
        app:tabMode="auto"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>